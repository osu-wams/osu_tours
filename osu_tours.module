<?php
/**
 * Implements hook_theme().
 */
function osu_tours_theme($existing, $type, $theme, $path) {
  return [
    'role_based_links_block' => [
      'variables' => [
        'links' => [],
      ],
      'template' => 'role-based-links-block',
    ],
  ];
}

/**
 * Implements hook_page_attachments().
 */
function osu_tours_page_attachments(array &$attachments) {
  $route_name = \Drupal::routeMatch()->getRouteName();

  // Only inject on the user profile page.
  if ($route_name === 'entity.user.canonical') {
    $block_manager = \Drupal::service('plugin.manager.block');
    $context_repository = \Drupal::service('context.repository');
    $renderer = \Drupal::service('renderer');

    // Create the block plugin instance.
    $plugin_block = $block_manager->createInstance('role_based_tours_block', []);
    $contexts = $context_repository->getRuntimeContexts([]);
    $plugin_block->setContextMapping([]);

    // Build and render the block.
    $block = $plugin_block->build();
    $rendered_block = $renderer->render($block);

    // Attach the rendered block to the page content.
    $attachments['page']['content']['osu_tours_block'] = [
      '#markup' => $rendered_block,
      '#weight' => 100,
    ];
  }
}
